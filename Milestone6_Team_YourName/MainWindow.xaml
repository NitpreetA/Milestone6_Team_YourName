<Window x:Class="Milestone6_Team_YourName.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone6_Team_YourName"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#faecb9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="563*"></ColumnDefinition>
            <ColumnDefinition Width="179*"></ColumnDefinition>
            <ColumnDefinition Width="58*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition Height="1*" ></RowDefinition>
            <RowDefinition Height="8*" ></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Background="White" BorderThickness="0" FontWeight="ExtraBold" Foreground="Red" Grid.Column="2" Click="btn_closePage" Margin="18,0,10,20" RenderTransformOrigin="-2.569,0.447">❌</Button>
        <ComboBox Name="comboBox1" Margin="10,48,361,339" Grid.RowSpan="2">Hello</ComboBox>
        <!--bind this to the cat list --> 
        <TextBox FocusManager.FocusedElement="{Binding ElementName=Box}" Grid.Row="0" Margin="10,2,371,22"></TextBox>
    </Grid>
</Window>
